<div class="container">
<div class="panel">
<div class="panel-body">
<table class="table">
<thead>
  <tr>
    <th>Quantity</th>
    <th>Item</th>
    <th>Unit price</th>
    <th>Price</th>
    <th>Remove</th>
  </tr>
</thead>
<tbody id="line-items">
<% @shopping_cart.line_items.each do |line_item| %>
    <%= render '/shopping_carts/line_item', {line_item: line_item} %>
<% end %>
<tfoot>
<tr>
  <th colspan="3">Total: </th>
  <td id="total-price">$<%= @shopping_cart.total_price %></td>
</tr>
<tr>
  <td>
  <%= form_tag '/shopping_cart/destroy_all_line_items', class: 'destroy-all-line-items', remote: true do %>
        <%= submit_tag 'Empty cart' %>
  <% end %>
  </td>
</tr>
<tr>
  <td>
    <form action="/purchases/checkout">
      <input type="submit" value="Checkout">
    </form>
  </td>
</tr>
</tfoot>
</tbody>
</table>
</div>
</div>
</div>