<link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/themes/smoothness/jquery-ui.css">
<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js"></script>

<p id="notice"><%= notice %></p>

<h1>Listing Manufacturers</h1>

<% @manufacturers.each do  |manufacturer| %>
    <%= manufacturer.name %> <%= link_to 'Destroy',
                                         manufacturer_path(manufacturer),
                                         method: :delete,
                                         data: { confirm: 'Are you sure?' } %> <br>
<% end %>
<br>

<% if @is_admin %>
    <h2>Create new manufacturer</h2>
    <%= form_tag("/manufacturers", method: "post") do %>
        <%= label_tag(:q, "Manufacturer name:") %>
        <%= text_field_tag(:name) %>
        <%= submit_tag("Create") %>
    <% end %>
<% end %>
