<li>
    <div class="admin-show">
        Name:
        <span class="team-name">
        <%= team.name %>
        </span><br>
        Synonyms:
        <span class="team-synonyms">
        <%= team.synonyms %>
        </span>
    </div>
    <div class="admin-edit" style="display: none">
        <%= form_for [:admin, team], remote: true do |f| %>
            <%= f.label :name %><br>
            <%= f.text_field(:name) %><br>
            <%= f.label :synonyms %><br>
            <%= f.text_area :synonyms %><br>
            <%= f.submit %>
        <% end %>
    </div>

    <a href="#" class="admin-edit-link">Edit</a>
    <%= link_to 'Destroy',
                 admin_team_path(team),
                 method: :delete,
                 data: { confirm: 'Are you sure?'},
                 :remote => true,
                 :class => 'admin-delete' %>
  <hr>
</li>