<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h2>Order #<%= @order.id %></h2>
    </div>
    <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h3 class="text-center"><strong>Order summary</strong></h3>
              </div>
              <div class="panel-body">
                <div class="table-responsive">
                  <table class="table table-condensed">
                    <thead>
                    <tr>
                      <th>Quantity</th>
                      <th>Item</th>
                      <th>Unit price</th>
                      <th>Price</th>
                    </tr>
                    </thead>
                    <tbody id="order-line-items">
                    <% @order.order_line_items.each do |line_item|  %>
                        <%= render '/orders/order_line_item', {line_item: line_item} %>
                    <% end %>
                    <tfoot>
                    <tr>
                      <th colspan="3">Total: </th>
                      <td id="total-price">$<%= sprintf("%.2f", @order.total_price_cents / 100) %></td>
                    </tr>
                    </tfoot>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="row">

          <div class="col-xs-12 col-md-3 col-lg-3">
            <div class="panel panel-default">
              <div class="panel-heading">Customer details</div>
              <div class="panel-body">
                <strong>Name:</strong> <%= @order.first_name %> <%= @order.last_name %><br>
                <strong>Email:</strong> <%= @order.email %><br>
              </div>
            </div>
          </div>
          <div class="col-xs-12 col-md-3 col-lg-3">
            <div class="panel panel-default">
              <div class="panel-heading">Payment Information</div>
              <div class="panel-body">
                <strong>PayPal transaction:</strong> <%= @order.transaction_id %><br>
              </div>
              </div>
            </div>

            <div class="col-xs-12 col-md-3 col-lg-3">
              <div class="panel panel-default">
                <div class="panel-heading">Shipping Address</div>
                <div class="panel-body">
                  <strong><%= @order.address.name %></strong><br>
                  <%= @order.address.street %><br>
                  <%= @order.address.city %><br>
                  <%= @order.address.state %><br>
                  <%= @order.address.zip %><br>
                </div>
              </div>
            </div>
            <form class="form-inline">
              <div class="form-group">
              <select class="form-control">
                <label>Shipping</label>
                <option>USPS Envelope - $2.25</option>
                <option>USPS Small flat rate box - $5.25</option>
              </select><br><br>
              <input type="submit" class="form-control" value="Purchase and print shipping label">
              </div>
            </form>
            <br>
            </div>
      <div class="row">
        <div class="col-xs-12">
            <form class="form-inline">
              <input type="submit" class="form-control" value="Set as processed">
            </form>
          </div>
        </div>
      <div class="row">
        <% if @order.prev %>
            <%= link_to('Previous', order_path(@order.prev)) %>
        <% else %>
            Previous
        <% end %>

        <% if @order.next %>
            <%= link_to('Next', order_path(@order.next), :class=>"pull-right") %>
        <% else %>
            <span class="pull-right">Next</span>
        <% end %>


      </div>
    </div>
  </div>
</div>
