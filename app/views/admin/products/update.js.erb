$('.admin-edit').bind('ajax:success', function() {

    var li = $(this).closest('li');
    var name = li.find('.product-name');
    name.text("<%= @product.name %>");
    var synonyms = li.find('.product-synonyms');
    synonyms.text("<%= @product.synonyms %>");

    li.find('.admin-edit').hide();
    li.find('.admin-show').show();
});