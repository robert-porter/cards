
<div class="item container">
  <div class="panel panel-default">
    <div class="panel-body">
    <div class="row">
      <div class="panel panel-default">
        <div class="panel-body">
    <div class="pull-left">
          <a href="javascript: window.open('<%= @item.image_url %>', null, 'height=y, width=x, toolbar=0, location=0, status=0, scrollbars=0, resizeable=0')">
          <%= image_tag @item.image_url(:medium) %>
          </a>
    </div>
    <div class="x">
        <strong>Name:</strong>
        <%= link_to @item.name, "/items?q=#{@item.name}" %>
        <br>
        <strong>Card#:</strong>
        <% if @item.card_number %>
          <%= @item.card_number %>
        <% else %>
          None
        <% end %>
        <br>
        <strong>Manufacturer:</strong>
        <%= link_to @item.manufacturer.name, "/items?q=#{@item.manufacturer.name}" %>
        <br>
        <strong>Team:</strong>
        <%= link_to @item.team.name, "/items?q=#{@item.team.name}" %>
        <br>
        <strong>Product:</strong>
        <%= link_to @item.product.name, "/items?q=#{@item.product.name}" %>
        <br>
        <strong>Year:</strong>
        <% if @item.year != nil && @item.year != 0 %>
            <%= link_to @item.year.to_s, "/items?q=#{@item.year.to_s}" %>
        <% else %>
            None
        <% end %>

        <br>
        <strong>Grade:</strong>
        <% if @item.numeric_grade != nil && @item.numeric_grade != 0 %>
            <%= link_to @item.grade.name, "/items?q=#{@item.grade.name}" %>
        <% else %>
            None
        <% end %>
        <br>
        <strong>Tags:</strong>
        <% if @item.tags.size == 0 %>
          None
        <% else %>
            <% @item.tags.each do  |tag| %>
                <%= link_to tag.name, "/items?q=#{tag.name}" %>
            <% end %>
        <% end %>
        <br>
        <strong>Quantity: </strong><%= @item.quantity.to_s %>
        <br>
          </div>
        </div>
      </div>
      </div>
      <div class="row">
      <div class="col-xs-12">
        <div class="panel panel-default">
        <div class="panel-body">
        <div class="col-xs-6">
          <form action="/items/buy/<%= @item.id %>">
           Quantity <input name="quantity" style="display:inline;width:40px" value="1">
           <b style="color:red">
              $<%= @item.price %>ea.
            </b>
            <input type="image" name="submit" src="https://www.paypalobjects.com/en_US/i/btn/btn_buynowCC_LG.gif">
          </form>
        </div>
        <div class="col-xs-6 pull-right">
        <%= form_tag '/shopping_cart/add_line_item', id: 'add-to-cart-form', remote: true do %>
          <input type="hidden" name="item_id" value="<%= @item.id %>">
          Quantity <input name="quantity" style="display:inline;width:40px" value="1">
          <b style="color:red">
            $<%= @item.price %>ea.
          </b>
          <input type="image" name="submit" class="add-to-cart" src="https://www.paypalobjects.com/en_US/i/btn/btn_cart_LG.gif">
        <% end %>
        </div>
          </div>
          </div>
      </div>
    </div>

    <div class="row">
        <strong>Description:</strong>
        <%= @item.description %>
    </div>
  </div>
  </div>
</div>
